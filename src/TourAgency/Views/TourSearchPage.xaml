<Page x:Class="TourAgency.Views.TourSearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TourAgency.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TourSearchPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <!--<TextBox Width="150" Margin="5" Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Width="100" Margin="5" Text="{Binding Nights, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Width="100" Content="Поиск" Command="{Binding SearchCommand}" Margin="5"/>

            <DataGrid Grid.Row="1" ItemsSource="{Binding Tours}" AutoGenerateColumns="True" 
                  AlternatingRowBackground="LightGray" Margin="0,5"/>-->
        </StackPanel>
    </Grid>
</Page>
