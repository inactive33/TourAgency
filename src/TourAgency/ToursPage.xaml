<Page x:Class="TourAgency.ToursPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TourAgency"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ToursPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="377"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DGridHotels" AutoGenerateColumns = "false" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Туроператор" Binding="{Binding Company}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="Город" Binding="{Binding City}" Width="140"></DataGridTextColumn>
                <DataGridTextColumn Header="Страна" Binding="{Binding Country}" Width="120"></DataGridTextColumn>
                <DataGridTextColumn Header="Авиарейсы" Binding="{Binding Flight}" Width="140"></DataGridTextColumn>
                <DataGridTextColumn Header="Отель" Binding="{Binding Hotel}" Width="160"></DataGridTextColumn>
                <DataGridTextColumn Header="Включается в тур" Binding="{Binding ListInclude}" Width="160"></DataGridTextColumn>
                <DataGridTextColumn Header="Имеется в отеле" Binding="{Binding ListPresent}" Width="160"></DataGridTextColumn>
                <DataGridTextColumn Header="Туры" Binding="{Binding Tour}" Width="160"></DataGridTextColumn>
                <DataGridTemplateColumn Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
